<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/quiz"
              tools:context=".MyQPagerAdapter"
              android:paddingTop="@dimen/question_top_padding">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="@dimen/question_text_width"
        android:layout_height="70dp"
        android:text="@string/soal1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:textSize="@dimen/question_text_size"
        android:paddingLeft="@dimen/question_left_padding"
        android:paddingBottom="20dp"/>

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="@dimen/question_choice_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_14"
                    android:textSize="@dimen/question_text_size"
                    />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_13"
                    android:textSize="@dimen/question_text_size"
                    />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_15"
                    android:textSize="@dimen/question_text_size"
                    />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_16"
                    android:textSize="@dimen/question_text_size"
                    />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_17"
                    android:textSize="@dimen/question_text_size"
                    />
            </TableRow>

        </TableLayout>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:id="@+id/questionTimeText"
            android:textSize="@dimen/question_text_size"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/_submit"/>

    </LinearLayout>
</LinearLayout>